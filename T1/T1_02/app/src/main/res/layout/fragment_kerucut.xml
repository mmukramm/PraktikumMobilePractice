<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".KerucutFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/jarijaritxt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="Jari-Jari"
            app:layout_constraintTop_toTopOf="parent"
            />

        <EditText
            android:id="@+id/jarijariet"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:hint="Masukkan Jari-jari"
            android:inputType="numberDecimal"
            app:layout_constraintTop_toBottomOf="@id/jarijaritxt" />
        <TextView
            android:id="@+id/tinggitxt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="Tinggi"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/jarijariet"
            />

        <EditText
            android:id="@+id/tinggiet"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:hint="Masukkan Tinggi"
            android:inputType="numberDecimal"
            app:layout_constraintTop_toBottomOf="@id/tinggitxt" />
        <Button
            android:id="@+id/submitbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tinggiet"
            android:layout_marginTop="20dp"
            android:text="Submit"/>

        <TextView
            android:id="@+id/hasil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/submitbutton"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="Hasil"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>